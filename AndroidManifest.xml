<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.newstand.news.app" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        
        android:allowBackup="true"
        android:icon="@drawable/news_iclauncher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.newstand.news.app.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.newstand.news.app.MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.newstand.news.app.FavoriteList"
            android:label="Newstand: Favorites" >
        </activity>
        <activity
            android:name="com.newstand.news.app.ArticleScreen"
            android:label="Newstand: Article" >
        </activity>
    </application>
</manifest>
